/*Поля данных:
текущий пробег автомобиля; v , but count
текущая скорость ТС - функция от мощности, статуса колес и оставшегося топлива; count
Методы:
прохождение по трассе; count
Класс "колесо". У каждого ТС - массив экземпляров класса ///
Поля данных:
текущий пробег колеса; v, but count (range/tyres)
Методы:
проверка статуса колеса. Вероятность повреждения увеличивается с увеличением пробега колеса; count
Класс "топливная система"

Методы:
вычисление текущего остатка топлива. count*/
class Engine
{
    double count_con(double power);
public:
    double power, con;
};
class FS
{
public:
    double v, fleft;
    friend double count_fleft(double v, ///);
};
class Wheel
{

public:
    double tyre_range;
    bool status;
    bool check_status(double tyre_range);
};
bool Wheel::check_status(double tyre_range){
     bool status;
     int k=0.005;
     k=tyre_range*k;
     if(k>=1){
        status=false;
     }
     else {
        status=true;
     }
     return status;
}
class Vehicle: public FS, public Engine{
    double count_speed(double power, int tyres, double v);
    int count_ref(double v, double con, double tr);
public:
    Wheel c1[100];
    int tyres;
    int refuel;
    double speed, range;
    double time1;
    char name[100];
    void count_time(double tr, double speed);

    Vehicle(int t_tyres, double t_v, double t_power){
        tyres=t_tyres;
        v=t_v;
        power=t_power;
        //range=t_range;
        con=count_con(power);
        speed=count_speed(power,tyres,v);
        time1=0;
    }

    Vehicle(){v=tyres=power=time1=0;}

    ~Vehicle(){
        cout<<"Vehicle has been deleted!"<<endl;
    }

    void output(int n);
};
double Vehicle::count_con(double power){
    double Q;
    Q=(0.85)*power/(0.73);
    return Q;
}
void Vehicle::output(int n){
cout<<n<<endl;
cout<<"Name: "<<name<<endl;
cout<<"Tyres: "<<tyres<<endl;
cout<<"Capacity: "<<v<<endl;
//cout<<"Range: "<<range<<endl;
cout<<"Power: "<<power<<endl;
cout<<"Speed: "<<speed<<endl;
cout<<"Consumption: "<<con<<endl;
}
double Vehicle::count_speed(double power, int tyres, double v){
double speed;
speed=power/(0,730*v*10*(double)tyres);
return speed;
}
void Vehicle::count_time(double tr, double speed){
    //double time1;
    time1=tr/speed;
    //return time1;
}
int Vehicle::count_ref(double v, double con, double tr){
    int n;
    double n1;
    n1=tr/(v/con);
    n=(int)n1;
    if((n-n1)<0){
        n=n+1;
    }
    return n;
}
